<% if flash[:alert] %>
  <div class="flash errors"><%= flash[:alert] %></div>
<% end %>

<% @body_id = 'login' %>
<div id="existing-customer">
  <h6>ログインする</h6>
  <div data-hook="login">
    <%= render partial: 'spree/shared/login' %>
    <%= link_to "アカウントを作成する", spree.signup_path %>
    <br>
    <%= link_to "パスワードをお忘れですか？", spree.recover_password_path %>
  </div>
</div>
<div data-hook="login_extras"></div>
