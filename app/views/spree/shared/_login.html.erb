<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <p>
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, class: 'title', tabindex: 1, autofocus: true %>
    </p>
    <p>
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, class: 'title', tabindex: 2 %>
    </p>
  </div>
  <p>
    <%= f.check_box :remember_me, tabindex: 3 %>
    <%= f.label :remember_me, "ログイン情報を保存する" %>
  </p>

  <p><%= f.submit "ログイン", class: 'button primary', tabindex: 4 %></p>
<% end %>
