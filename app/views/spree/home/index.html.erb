<% content_for :sidebar do %>
  <div class="fronted__content__taxons" data-hook="homepage_sidebar_navigation">
    <%= render partial: 'spree/shared/taxonomies' %>
  </div>
<% end %>

<div data-hook="homepage_products">
  <h2 class="fronted__top__title">さがす</h2>
  <ul id="nav-bar" class="js-humberger" data-hook>
    <li id="search-bar" class="fronted__top__search" data-hook>
      <%= render partial: 'spree/shared/search' %>
    </li>
  </ul>
  <ul id="slider">
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
    <li><a href="#"><%= image_tag 'tags/fashion.jpg', class: "fronted__top__image__content" %></a></li>
  </ul>
  <h2 class="fronted__top__title fronted__top__title-new">新着アイテム</h2>
  <hr class='fronted__top__line' />
  <div class='fronted__top__items'>
    <%= render partial: 'spree/shared/products', locals: { products: @products } %>
  </div>
  <div class="fronted__top__more"><%= link_to "もっとみる", products_path, class: 'button button-fukuroo' %></div>
  <h2 class="fronted__top__title">人気アイテム</h2>
  <hr class='fronted__top__line' />
  <div class='fronted__top__items'>
    <%= render partial: 'spree/shared/products', locals: { products: @products } %>
  </div>
  <div class="fronted__top__more"><%= link_to "もっとみる", products_path, class: 'button button-fukuroo' %></div>
  <h2 class="fronted__top__title">カテゴリー</h2>
  <% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
  <nav id="taxonomies" class="sidebar-item" data-hook>
    <% @taxonomies.each do |taxonomy| %>
      <% cache [I18n.locale, taxonomy, @taxon, max_level] do %>
        <h6 class='taxonomy-root fronted__taxon__link js-taxonomies'><span><%= t('spree.shop_by_taxonomy', taxonomy: taxonomy.name) %></span>
          <%= taxons_tree(taxonomy.root, @taxon, max_level) %>
        </h6>
      <% end %>
    <% end %>
  </nav>
</div>

